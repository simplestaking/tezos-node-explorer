{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "es2020",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "allowJs": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@app/*": ["src/app/*"],
      "@core/*": ["src/app/core/*"],
      "@chain/*": ["src/app/chain/*"],
      "@endpoints/*": ["src/app/endpoints/*"],
      "@logs/*": ["src/app/logs/*"],
      "@mempool/*": ["src/app/mempool/*"],
      "@monitoring/*": ["src/app/monitoring/*"],
      "@network/*": ["src/app/network/*"],
      "@open-api/*": ["src/app/open-api/*"],
      "@resources/*": ["src/app/resources/*"],
      "@sandbox/*": ["src/app/sandbox/*"],
      "@settings/*": ["src/app/layout/settings-node/*"],
      "@smart-contracts/*": ["src/app/smart-contracts/*"],
      "@state-machine/*": ["src/app/state-machine/*"],
      "@storage/*": ["src/app/storage/*"],
      "@wallets/*": ["src/app/wallets/*"],
      "@shared/*": ["src/app/shared/*"],
      "@helpers/*": ["src/app/shared/helpers/*"],
      "@environment/*": ["src/environments/*"],
      "stream": ["./node_modules/readable-stream"]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
